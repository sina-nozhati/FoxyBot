# توکن‌های ربات تلگرام
ADMIN_BOT_TOKEN=your_admin_bot_token_here
USER_BOT_TOKEN=your_user_bot_token_here

# تنظیمات دیتابیس PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/foxybot

# تنظیمات امنیتی
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# تنظیمات پنل Hiddify
HIDDIFY_API_VERSION=v1
HIDDIFY_BASE_URL=https://your-panel.com

# شماره کارت برای دریافت پرداخت‌ها
PAYMENT_CARD_NUMBER=your_card_number_here

# تنظیمات هشدار
TRAFFIC_ALERT_THRESHOLD=0.8
EXPIRY_ALERT_DAYS=3

# تنظیمات لاگینگ
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/foxybot.log

# تنظیمات کرون جاب
UPDATE_INTERVAL=3600
BACKUP_INTERVAL=86400 